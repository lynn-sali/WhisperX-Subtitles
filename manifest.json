{
  "manifest_version": 2,
  "name": "WhisperX Subtitles",
  "version": "1.0",
  "description": "Adds subtitles for all detected voice activity. Transcription generated using WhisperX. ",
  "permissions": [
    "activeTab",
    "storage"
  ], 
  "browser_action": {
    "default_popup": "settings.html",
    "default_icon": "pictures/icon.png"
  },
  "content_scripts": [ 
    {
      "matches": ["<all_urls>"],
      "js": ["subtitles.js"]
    }
  ]
}
